<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="popupScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="popupTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@android:color/tab_indicator_text</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMaxTextSize">48sp</item>
        <item name="autoSizeMinTextSize">1sp</item>
    </style>

    <style name="popupText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/tab_indicator_text</item>
        <item name="android:textAllCaps">false</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <style name="popupSwitchTheme">
        <item name="colorControlActivated">@color/colorGreen</item>
    </style>

    <style name="popupSwitch">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/tab_indicator_text</item>
        <item name="android:textAllCaps">false</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="popupClose">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/tab_indicator_text</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMaxTextSize">42sp</item>
        <item name="autoSizeMinTextSize">1sp</item>
    </style>

    <style name="gameStatisticsTitle">
        <item name="android:text">@string/stats_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">64sp</item>
        <item name="android:maxLines">1</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">1sp</item>
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="gameStatisticsPlayerName">
        <item name="android:text">@string/stats_title</item>
        <item name="android:textStyle">italic</item>
        <item name="autoSizeMaxTextSize">64sp</item>
        <item name="android:maxLines">1</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">1sp</item>
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="gameStatisticsButton">
        <item name="backgroundTint">@color/colorGlassFrosted</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/tab_indicator_text</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMaxTextSize">14sp</item>
        <item name="autoSizeMinTextSize">1sp</item>
        <item name="android:maxLines">1</item>
    </style>
    
    <style name="gameButtonClear" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@color/colorGlass</item>
        <item name="android:onClick">buttonBoardOnClick</item>
    </style>

    <style name="gameButtonBlue" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@color/colorBlue</item>
        <item name="android:onClick">buttonBoardOnClick</item>
    </style>

    <style name="gameButtonOrange" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@color/colorOrange</item>
        <item name="android:onClick">buttonBoardOnClick</item>
    </style>

    <style name="glassToast">
        <item name="stColorBackground">@color/colorGlassFoggy</item>
        <item name="stTextColor">@android:color/tab_indicator_text</item>
        <item name="stGravity">center</item>
    </style>

</resources>
