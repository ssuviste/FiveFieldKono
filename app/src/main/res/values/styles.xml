<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="helpScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowBackground">@color/colorGlassFoggy</item>
    </style>

    <style name="helpTitle">
        <item name="android:text">@string/help_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@android:color/tab_indicator_text</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <style name="helpText">
        <item name="android:text">@string/help_text</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/tab_indicator_text</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:scrollbars">vertical|horizontal</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <style name="helpClose">
        <item name="android:text">@string/help_close</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/tab_indicator_text</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <style name="gameStatisticsTitle">
        <item name="android:text">@string/stats_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">64sp</item>
        <item name="android:maxLines">1</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">1sp</item>
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="gameStatisticsPlayerName">
        <item name="android:text">@string/stats_title</item>
        <item name="android:textStyle">italic</item>
        <item name="autoSizeMaxTextSize">64sp</item>
        <item name="android:maxLines">1</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">1sp</item>
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="gameStatisticsButton">
        <item name="backgroundTint">@color/colorGlassFrosted</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/tab_indicator_text</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMaxTextSize">14sp</item>
        <item name="autoSizeMinTextSize">1sp</item>
    </style>
    
    <style name="gameButtonClear" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@color/colorGlass</item>
        <item name="android:onClick">buttonBoardOnClick</item>
    </style>

    <style name="gameButtonBlue" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@color/colorBlue</item>
        <item name="android:onClick">buttonBoardOnClick</item>
    </style>

    <style name="gameButtonOrange" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@color/colorOrange</item>
        <item name="android:onClick">buttonBoardOnClick</item>
    </style>

</resources>
